#!/bin/bash

# Get the file name from the user
file_name=$1

# Check if the file exists
if [ ! -f "$file_name" ]; then
  echo "File '$file_name' does not exist"
  exit 1
fi

# Get the current permissions of the file
permissions=$(ls -l "$file_name" | awk '{print $1}')

# Change the permissions of the file to make it executable for the user owner
chmod u+x "$file_name"

# Change the permissions of the file to make it executable for others
chmod o+x "$file_name"

echo "Changed permissions of '$file_name' to make it executable for the user owner and others"
